<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="structured_list.less" modification_key="cv6_npi_iconcolor" description="Adds  Icon Color" execution_order="10" enabled="1" action="preg_replace">
    <find><![CDATA[/$/]]></find>
    <replace><![CDATA[.cv6--newpost {
	color: @xf-cv6PiNewPostColor;
}]]></replace>
  </modification>
  <modification type="public" template="thread_list_macros" modification_key="cv6_np_addunreadicon" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<xf:if is="$thread.prefix_id">]]></find>
    <replace><![CDATA[				<xf:if is="{{ $thread.isUnread() AND property('cv6PiNewPostIcon') }}">
					<xf:fa icon="{{ property('cv6PiNewPostIcon') }}" class="cv6--newpost" title="{{ phrase('new_posts')}}" data-xf-init="tooltip" />
				</xf:if>
$0]]></replace>
  </modification>
</template_modifications>
